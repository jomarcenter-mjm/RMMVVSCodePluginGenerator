{
	"name": "rpgmakermvvisualplugingenerator",
	"displayName": "RpgMakerMVVisualPluginGenerator",
	"description": "Create Plugin much easier with the visual plugin generator",
	"version": "0.3.0",
	"publisher": "MJMCreativeWorksAndIdea",
    "repository":{
        "type" : "git",
        "url" : "https://github.com/jomarcenter-mjm/RMMVVSCodePluginGenerator"
    },
    "icon": "icon.png",
	"engines": {
		"vscode": "^1.39.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:RMMV.createNewRMMVPlugin",
		"onCommand:RMMV.createBlankRMMVPlugin"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "RMMV.createNewRMMVPlugin",
				"title": "Create a new rpg maker Plugin file",
				"category": "Other"
			},
			{
				"command": "RMMV.createBlankRMMVPlugin",
				"title": "Create a new blank rpg maker Plugin file",
				"category": "Other"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^5.2.7",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.39.0",
		"glob": "^7.1.5",
		"mocha": "^6.2.2",
		"typescript": "^3.6.4",
		"tslint": "^5.20.0",
		"vscode-test": "^1.2.2"
	}
}
